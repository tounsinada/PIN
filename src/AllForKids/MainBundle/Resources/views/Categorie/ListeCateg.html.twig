    <div class="main-content">


        <table class="table">
            <thead>
            <tr>
                <th>Nom Ctegorie</th>


                <th style="width: 3.5em;"></th>
            </tr>
            </thead>

            <tbody>
            {% for m in categorie %}
                <tr>
                    <td>{{m.nomCategorie}}</td>



                <td>

                    <a href="{{ path('supprime_categ', {'id':m.id}) }}"  role="button" data-toggle="modal"><i class="fa fa-trash-o"></i></a>
